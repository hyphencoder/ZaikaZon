<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/backbtnpro"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:tint="@color/iconcolor"
            android:src="@drawable/baseline_arrow_circle_left_24"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerVertical="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textColor="@color/iconcolor"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold|italic"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/backbtnpro"
            android:layout_marginStart="@dimen/_50sdp"/>

    </RelativeLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:cardCornerRadius="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear_layout1"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardElevation="@dimen/_10sdp">

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img1"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_below="@+id/cardview1"
        android:textSize="@dimen/_15ssp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"/>

    <Button
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/iconcolor"
        android:backgroundTint="@color/colorPrimary"
        android:layout_below="@+id/username"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name :"
        android:textColor="@color/colorTextPrimary"
        android:layout_below="@+id/edit_profile"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Om Prakash Maury"
        android:textColor="@color/colorTextSecondary"
        android:layout_below="@+id/txt_name"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:textColor="@color/colorTextPrimary"
        android:layout_below="@+id/name"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="omaurya367@gmail.com"
        android:textColor="@color/colorTextSecondary"
        android:layout_below="@+id/txt_email"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/txt_phoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textColor="@color/colorTextPrimary"
        android:layout_below="@+id/email"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9369456696"
        android:textColor="@color/colorTextSecondary"
        android:layout_below="@+id/txt_phoneno"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address "
        android:textColor="@color/colorTextPrimary"
        android:layout_below="@+id/mobile"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Azamgarh ,Up "
        android:textColor="@color/colorTextSecondary"
        android:layout_below="@+id/txt_address"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"/>


    <Button
        android:id="@+id/logout"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textColor="@color/iconcolor"
        android:textSize="@dimen/_20ssp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>